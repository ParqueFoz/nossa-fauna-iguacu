<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.edu.utfpr.nossafaunaiguacu">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <activity
            android:name=".features.splash.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.onboard.OnBoardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".features.home.HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".features.QrCodeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".features.home.animal.AnimalActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>